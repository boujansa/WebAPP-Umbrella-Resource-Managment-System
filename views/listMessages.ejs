<!-- views/listLabs.ejs -->
<!doctype html>
<html>
<head>
	<title>Lab List</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-left">
		<h1>Your Private Messages</h1>
		<p>Go to <a href="/profile">Homepage</a></p>
	</div>


	<div class="row">

		<% if (user.messages.length == 0) { %>
		<div class="alert alert-success">You don't have any Messages</div>
		<% } %>

		<!-- Message INFORMATION -->
		<h3>List of Messages: </h3>
		<div class="col-sm-6">
			<div class="well">

				<!-- show any messages that come back -->
				<% if (message != null) { %>
				<div class="alert alert-success"><%= message %></div>
				<% } %>

					<ul>
						<% if(user != null) {%>
							<% for(var i=0; i<user.messages.length; i++) {%>
								<form action="/replyThisMessage?receiver=<%=user.messages[i].from%>" method="post">
   							<h3><b>From     :</b> <%= user.messages[i].from %></h3>
   							<li><b>Message  :</b> <%= user.messages[i].message %></li>
								<input type="text" class="form-control" name="reply" placeholder="Type your reply here">
	   						<a href="/deleteThisMessage?from=<%=user.messages[i].from%>&message=<%= user.messages[i].message %>" class="btn btn-primary btn-sm">Delete Message</a>
								<button type="submit" class="btn btn-primary btn-sm">Reply Message</button>
								<br>
								</form>
							<% } %>
						<% } %>
					</ul>

			</div>
		</div>

	</div>

</div>
</body>
</html>
